{
  "id": "template-api",
  "cpus": 0.1,
  "mem": 64,
  "instances": 2,
  "container": {
    "type": "DOCKER",
    "docker": {
      "image": "django_mesos_example_application:{{application_docker_image_version_tag}}",
      "network": "BRIDGE",
      "portMappings": [
          {"containerPort": 45000, "hostPort": 0, "servicePort": 45000, "protocol": "tcp" }
      ]
    },
    "volumes": [{
        "containerPath": "/app/web",
        "hostPath": "/vagrant",
        "mode": "RW"
    }]
  },
  "healthChecks": [
    {
      "protocol": "TCP",
      "portIndex": 0,
      "gracePeriodSeconds": 5,
      "intervalSeconds": 20,
      "maxConsecutiveFailures": 3
    }
  ]
}
